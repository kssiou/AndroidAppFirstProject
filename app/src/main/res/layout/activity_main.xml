<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


   <Button
       android:id="@id/btn"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/enregistrer"
       app:layout_constraintBottom_toBottomOf="parent"
    />
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
/>
    <TextView
        android:id="@id/txtNom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/nom"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText

        android:id="@id/LabelNom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/txtNom"
        app:layout_constraintEnd_toStartOf="@id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtNom"

        />
    <TextView
        android:id="@id/textPrenom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/prm"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/txtNom"
        app:layout_constraintStart_toStartOf="parent"

        />

    <EditText
        android:id="@id/LabelPrenom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/LabelNom"
        app:layout_constraintStart_toEndOf="@id/textPrenom"
        app:layout_constraintEnd_toStartOf="@id/image"


        />
    <TextView
        android:id="@id/Classetxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/classe"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/LabelPrenom"
        app:layout_constraintStart_toStartOf="parent"



        />

    <EditText
        android:id="@id/Labelclasse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textPrenom"
        app:layout_constraintStart_toEndOf="@id/Classetxt"
        app:layout_constraintEnd_toStartOf="@id/image"
        app:layout_constraintBaseline_toBaselineOf="@+id/Classetxt"
        />
    <TextView
        android:id="@id/Remarquetxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/remarque"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/Classetxt"
        app:layout_constraintStart_toStartOf="parent"



        />

    <EditText
        android:id="@id/LabelRemarque"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/Remarquetxt"
        app:layout_constraintBottom_toTopOf="@+id/btn"
        />



</androidx.constraintlayout.widget.ConstraintLayout>